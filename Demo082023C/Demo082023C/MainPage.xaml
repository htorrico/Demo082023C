<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo082023C.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="style1">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Red"/>
                <Setter Property="FontSize" Value="50"/>
            </Style>

            <Style TargetType="Button" x:Key="style2">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Blue"/>
            </Style>

            <Style TargetType="Button" >
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Green"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>
        <Button Text="CON ESTILO IMPLÍCITO"></Button>

        <Label Text="CON ESTILO" Style="{StaticResource style1}" />
        <Label Text="CON ESTILO 2" Style="{StaticResource style1}" />
        <Label Text="CON ESTILO 3"  Style="{StaticResource style1}" />
        <Label Text="SIN ESTILO"/>
        <Button Text="SIN ESTILO" Style="{StaticResource style2}"/>

    </StackLayout>

</ContentPage>
